	<build>
		<finalName>${project.artifactId}</finalName>
		<resources>
			<resource>
				<filtering>false</filtering>
				<directory>${basedir}/src/main/resources</directory>
				<excludes>
					<exclude>db.properties</exclude>
					<exclude>social.properties</exclude>
					<exclude>security.properties</exclude>
					<exclude>gmail.properties</exclude>
					<exclude>users-init.sql</exclude>
				</excludes>
			</resource>
			<resource>
				<filtering>true</filtering>
				<directory>${basedir}/src/main/resources</directory>
				<includes>
					<include>db.properties</include>
					<include>social.properties</include>
					<include>security.properties</include>
					<include>gmail.properties</include>
					<include>users-init.sql</include>
				</includes>
			</resource>
		</resources>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>com.heroku.sdk</groupId>
					<artifactId>heroku-maven-plugin</artifactId>
					<version>0.3.0</version>
					<configuration>
						<appName>prueba-sts-maven-heroku</appName>
						<jdkVersion>1.7</jdkVersion>
						<includes>
							<include>src/main/webapp/js</include>
							<include>src/main/webapp/css</include>
						</includes>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>com.mycila</groupId>
				<artifactId>license-maven-plugin</artifactId>
				<version>2.8</version>
				<configuration>
					<header>com/mycila/maven/plugin/license/templates/AGPL-3.txt</header>
					<excludes>
						<exclude>COPYING</exclude>
						<exclude>src/test/resources/**</exclude>
						<exclude>src/main/resources/**</exclude>
					</excludes>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<id>dev</id>
			<dependencies>
				<dependency>
					<groupId>org.hsqldb</groupId>
					<artifactId>hsqldb</artifactId>
					<version>2.3.1</version>
				</dependency>
			</dependencies>
			<properties>
				<jdbc.driverClassName>org.hsqldb.jdbcDriver</jdbc.driverClassName>
				<jdbc.url>jdbc:hsqldb:mem:app;shutdown=true</jdbc.url>
				<jdbc.username>sa</jdbc.username>
				<jdbc.password></jdbc.password>
				<hibernate.dialect>org.hibernate.dialect.HSQLDialect</hibernate.dialect>
				<hibernate.hbm2ddl.auto>create-drop</hibernate.hbm2ddl.auto>
				<hibernate.hbm2ddl.import_files>users-init.sql,espacios-init.sql,avisos-init.sql</hibernate.hbm2ddl.import_files>
				<hibernate.show_sql>true</hibernate.show_sql>
			</properties>
		</profile>
		<profile>
			<id>postgresql</id>
			<dependencies>
				<!-- Postgresql -->
				<dependency>
					<groupId>postgresql</groupId>
					<artifactId>postgresql</artifactId>
					<version>9.1-901.jdbc4</version>
				</dependency>
			</dependencies>
			<properties>
				<jdbc.driverClassName>org.postgresql.Driver</jdbc.driverClassName>
				<jdbc.url>jdbc:postgresql://localhost:5432/portal</jdbc.url>
				<jdbc.username>postgres</jdbc.username>
				<jdbc.password>notSecure</jdbc.password>
				<hibernate.dialect>org.hibernate.dialect.PostgreSQLDialect</hibernate.dialect>
				<hibernate.hbm2ddl.auto>create-drop</hibernate.hbm2ddl.auto>
				<hibernate.hbm2ddl.import_files>users-init.sql,espacios-init.sql,avisos-init.sql</hibernate.hbm2ddl.import_files>
				<hibernate.show_sql>true</hibernate.show_sql>
			</properties>
		</profile>
		<profile>
			<id>mysql</id>
			<dependencies>
				<!-- MySQL Connector -->
				<dependency>
					<groupId>mysql</groupId>
					<artifactId>mysql-connector-java</artifactId>
					<version>5.1.34</version>
				</dependency>
			</dependencies>
			<properties>
				<jdbc.driverClassName>com.mysql.jdbc.Driver</jdbc.driverClassName>
				<jdbc.url><![CDATA[jdbc:mysql://localhost:3306/portal?useUnicode=true&characterEncoding=UTF-8]]></jdbc.url>
				<jdbc.username>portal</jdbc.username>
				<jdbc.password>portal</jdbc.password>
				<hibernate.dialect>org.hibernate.dialect.MySQL5InnoDBDialect</hibernate.dialect>
				<hibernate.hbm2ddl.auto>create-drop</hibernate.hbm2ddl.auto>
				<hibernate.hbm2ddl.import_files>users-init.sql,espacios-init.sql,avisos-init.sql</hibernate.hbm2ddl.import_files>
				<hibernate.show_sql>true</hibernate.show_sql>
			</properties>
		</profile>
	</profiles>
